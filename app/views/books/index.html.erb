<body>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
					<tr>
						<td>
							<%= book.title %>
						</td>
						<td>
							<%= book.body %>
						</td>
						<td>
							Show
						</td>
						<td>
							Edit
						</td>
						<td>
							Destroy
						</td>
					</tr>
			<% end %>
		</tbody>
	</table>

<%= form_for(@newbook) do |f| %>

	<h4>title</h4>
	<%= f.text_field :title %>

	<h4>body</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>

<% end %>
</body>